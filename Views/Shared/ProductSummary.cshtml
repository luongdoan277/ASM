@model Product

<div class="col-md-4">
    <div class="img-product-home">
        <img src="@Model.ImageProduct" alt="Alternate Text" />
    </div>
    <div class="text-center">
        <a href="#">@Model.Name</a>
    </div>
    <p class="text-center">
        <span>
            S @Model.Price
            <br />
            L @(Model.Price+80)
            <br />
            XL @(Model.Price*2)
        </span>
    </p>
    <p>@Model.Description</p>
    <div>
        <button type="submit" class="btn btn-success btn-sm pull-right">
            Chọn mua
        </button>
    </div>
</div>

@*View Component*@ 